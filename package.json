{
  "name": "firefox-owncast-extension",
  "version": "0.5.0",
  "author": "Fabian Siegel <fabians1999@gmail.com>",
  "license": "MIT",
  "scripts": {
    "build": "webpack && web-ext build",
    "watch": "webpack --watch",
    "lint": "eslint src/ --ext .js --ext .vue && web-ext lint",
    "start": "web-ext run"
  },
  "devDependencies": {
    "@types/webextension-polyfill": "^0.8.3",
    "@volar/vue-language-server": "^0.33.9",
    "@vue/compiler-sfc": "^3.2.29",
    "copy-webpack-plugin": "^10.2.4",
    "css-loader": "^6.2.0",
    "eslint": "^7.28.0",
    "eslint-config-standard": "^16.0.3",
    "eslint-plugin-import": "^2.23.4",
    "eslint-plugin-mozilla": "^2.11.4",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^5.2.0",
    "eslint-plugin-vue": "^8.5.0",
    "file-loader": "^6.2.0",
    "html-webpack-plugin": "^5.3.2",
    "mini-css-extract-plugin": "^2.6.0",
    "sass": "^1.35.2",
    "sass-loader": "^12.1.0",
    "web-ext": "6.7.0",
    "webextension-polyfill-ts": "^0.26.0",
    "webpack": "^5.70.0",
    "webpack-cli": "^4.9.1"
  },
  "dependencies": {
    "@cfworker/json-schema": "^1.12.0",
    "@heroicons/vue": "^1.0.6",
    "pinia": "^2.0.12",
    "typescript": "^4.5.5",
    "urlcat": "^2.0.4",
    "vue": "^3.2.29",
    "vue-loader": "^17.0.0",
    "webextension-polyfill": "^0.8.0"
  },
  "webExt": {
    "sourceDir": "addon",
    "build": {
      "overwriteDest": true
    }
  },
  "eslintConfig": {
    "env": {
      "browser": true,
      "es6": true,
      "webextensions": true
    },
    "globals": {
      "browser": "off",
      "process": "readonly",
      "OWNCAST_BROWSER_EXTENSION_VERSION": "readonly"
    },
    "extends": [
      "eslint:recommended",
      "plugin:vue/vue3-recommended",
      "standard"
    ],
    "parserOptions": {
      "sourceType": "module",
      "ecmaVersion": 2018
    },
    "plugins": [
      "mozilla"
    ],
    "rules": {
      "indent": [
        "error",
        "tab",
        {
          "SwitchCase": 1
        }
      ],
      "no-tabs": [
        "error",
        {
          "allowIndentationTabs": true
        }
      ],
      "comma-dangle": [
        "error",
        "always-multiline"
      ],
      "no-unused-vars": [
        "error",
        {
          "args": "none"
        }
      ],
      "eqeqeq": 2,
      "quotes": [
        "error",
        "single"
      ],
      "camelcase": 2,
      "curly": 2,
      "object-curly-spacing": [
        "error",
        "always"
      ],
      "space-in-parens": [
        "error",
        "never"
      ]
    }
  }
}
