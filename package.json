{
  "name": "firefox-owncast-extension",
  "version": "0.2.0",
  "author": "Fabian Siegel <fabians1999@gmail.com>",
  "license": "MIT",
  "scripts": {
    "build": "webpack && web-ext build",
    "watch": "webpack --watch",
    "lint": "eslint src/ && web-ext lint",
    "start": "web-ext run"
  },
  "devDependencies": {
    "base64-inline-loader": "^1.1.1",
    "copy-webpack-plugin": "^7.0.0",
    "css-loader": "^5.0.1",
    "eslint": "^7.18.0",
    "eslint-plugin-mozilla": "^2.9.2",
    "eslint-plugin-vue": "^7.5.0",
    "file-loader": "^6.2.0",
    "html-webpack-plugin": "^4.5.1",
    "mini-css-extract-plugin": "^1.3.4",
    "sass": "^1.32.5",
    "sass-loader": "^10.1.1",
    "web-ext": "^5.5.0",
    "webextension-polyfill-ts": "^0.22.0",
    "webpack": "^5.19.0",
    "webpack-cli": "^4.4.0"
  },
  "dependencies": {
    "urlcat": "^2.0.4",
    "vue": "^2.6.12",
    "vue-loader": "^15.9.6",
    "vue-template-compiler": "^2.6.12",
    "vuex": "^3.6.0",
    "webextension-polyfill": "^0.7.0"
  },
  "webExt": {
    "sourceDir": "addon",
    "build": {
      "overwriteDest": true
    }
  },
  "eslintConfig": {
    "env": {
      "browser": true,
      "es6": true,
      "webextensions": true
    },
    "globals": {
      "browser": "off"
    },
    "extends": [
      "eslint:recommended",
      "plugin:vue/vue3-recommended"
    ],
    "parserOptions": {
      "sourceType": "module",
      "ecmaVersion": 2018
    },
    "plugins": [
      "mozilla"
    ],
    "rules": {
      "indent": [
        "error",
        "tab",
        {
          "SwitchCase": 1
        }
      ],
      "no-unused-vars": [
        "error",
        {
          "args": "none"
        }
      ],
      "eqeqeq": 2,
      "quotes": [
        "error",
        "single"
      ],
      "camelcase": 2,
      "curly": 2,
      "space-in-parens": [
        "error",
        "never"
      ]
    }
  }
}
